
@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<div class="container">
	<div class="frame">
		<div class="nav">
			<ul class"links">
				<li class="signin-active"><a class="btn" style="font-size:30px;">Ingresar</a></li>
			</ul>
		</div>
		<div ng-app ng-init="checked = false">
			<form class="form-signin" action="@Url.Content("~/Acceso/Login")" method="post">
				<label for="username">Documento</label>
				<input class="form-styling" type="text" name="User" placeholder="" />
				<label for="password">Password</label>
				<input class="form-styling" type="text" name="Pass" placeholder="" />
				<input type="checkbox" id="checkbox" />
				<label for="checkbox"><span class="ui"></span>Keep me signed in</label>
				<h4 style="color:red">@ViewBag.Error</h4>

				<button type="submit" class="btn-animate">Sign in</button>

			</form>
		</div>
	</div>
</div>

