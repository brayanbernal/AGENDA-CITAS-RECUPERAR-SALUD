@model RECSALUD.Models.AGENDACITAS

@{
    ViewBag.Title = "MODIFICAR CITA";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
<div class="container" style="width:100%;background-color:rgba(208, 211, 212, .8);border-radius:50px">
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.id)
	<div class="card">
		<div class="card-header" style="text-align:center;background-color:#3498DB ;color:white;border-radius:20px;"> <h3>MODIFICAR CITA</h3></div>
		<div class="card-body">
			<br />
			<div class="row">
				<div class="col-md-4">
					FECHA:@Html.EditorFor(model => model.fechacita, new { htmlAttributes = new { @class = "form-control", @TYPE = "date", @ID= "fechacita", @REQUIRED = "required" } })
					@Html.ValidationMessageFor(model => model.fechacita, "", new { @class = "text-danger" })
				</div>
				<div class="col-md-4">
					HORA:@Html.DropDownList("horacita", null, htmlAttributes: new { @class = "form-control", @ID = "horacita", @REQUIRED = "required" })
					@Html.ValidationMessageFor(model => model.horacita, "", new { @class = "text-danger" })
				</div>
				<div class="col-md-4">
					DOCUMENTO PACIENTE:@Html.EditorFor(model => model.documentop, new { htmlAttributes = new { @class = "form-control", @READONLY = "readonly" } })
					@Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
				</div>
			</div>
			<br />
			<div class="row">
				<div class="col-md-4">
					PROFESIONAL:@Html.DropDownList("profesional", null, htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.profesional, "", new { @class = "text-danger" })
				</div>
				<div class="col-md-4">
					ESTADO:@Html.DropDownList("estado", null, htmlAttributes: new { @class = "form-control"})
					@Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
				</div>
				<div class="col-md-4">
					OBSERVACIONES:@Html.EditorFor(model => model.observaciones, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
				</div>
			</div>
			<br />
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4"><input type="submit" value="GUARDAR" class="btn btn-info" /></div>
				<div class="col-md-4"></div>
			</div>

		</div>

	</div>
	<br />
</div>
}
		<div>
			@Html.ActionLink("Back to List", "Index2")
		</div>
@section scripts{
	<script>
		$('#horacita').empty();
			//************* HORAS DISPONIBLES **********************//

		$(document).ready(function () {
			$("#fechacita").change(function () {
				$('#horacita').empty();
				$.getJSON('/AGENDACITAS/GetHoras', { fecha: $('#fechacita').val(), profesional: $('#profesional').val() }, function (data) {
					$.each(data, function () {
						$('#horacita').append('<option value=' +
							this.Value + '>' + this.Text + '</option>');
					});
				});
			});
		});

	//************* FIN HORAS DISPONIBLES **********************//




	</script>
	
	
	}